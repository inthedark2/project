@model IEnumerable<TeamProject.Models.IndexHomeViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="shop-grid">
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="col-md-4 grid-stn simpleCart_shelfItem">
                <div class="ih-item square effect3 bottom_to_top">
                    <div class="bottom-2-top">
                        <div class="img"><img src="@item.miniImage" alt="/" class="img-responsive gri-wid"></div>
                        <div class="info">
                            <div class="pull-left styl-hdn">
                                <h3>@item.Title</h3>
                            </div>
                            <div class="pull-right styl-price">
                                <p><a href="#" class="item_add"><span class="glyphicon glyphicon-shopping-cart grid-cart" aria-hidden="true"></span> <span class=" item_price">$@item.Price</span></a></p>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
                <div class="quick-view">
                    @Html.ActionLink("Details", "details", new { id = item.Id });
                </div>
            </div>
        }

    </div>
</div>